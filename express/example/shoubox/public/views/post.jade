extends layout 

block content
  //- 导航链接
  include menu
  h1 #{title}
  p Fill in the form below to add a new post.
  include messages
  form(action='/post' method='post')
  	p
  	  input(type='text' name='entry[title' placeholder='Title')
  	p
  	  textarea(name='entry[body]' placeholder='Body')
  	p
  	  input(type='submit' value='Post')